{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [
    "es2018",
    "dom"
  ]
}
